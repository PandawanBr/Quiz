<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="blackbelt.com.quiz.QuizMenu"
    android:weightSum="1"
    android:background="#E0FFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/ninjablack"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:id="@+id/minhafoto"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rodrigo Kobayashi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/meunome"
            android:layout_toRightOf="@id/minhafoto"
            android:layout_alignBaseline="@id/minhafoto"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17840821"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/meunome"
            android:layout_toRightOf="@id/minhafoto"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o nome..."
        android:inputType="text"
        android:maxLength="45"
        android:textSize="25sp"
        android:id="@+id/nome"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="150sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp">

        <Button
            android:id="@+id/iniciar"
            android:layout_width="0sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="Iniciar Quiz"
            android:onClick="iniciarQuiz"
            android:textSize="20sp"
            android:enabled="false"
            />

        <Button
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="80sp"
            android:text="SAIR"
            android:onClick="sairApp"
            android:textSize="20sp"
            android:id="@+id/sair"
            />

    </LinearLayout>

</LinearLayout>
